<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Astra Scented Candles - Horoscope</title>
    <link rel="stylesheet" href="/styles.css">
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet'>
</head>
<body>
    <div class="container">
        <header>
            <div class="logo"><img src="/images/logo.png" alt="Astra logo"></div>
        </header>
        <main>
            <section class="horoscope">
                <h1>Horoscopes</h1>
                <div class="card-container">
                    <% horoscopes.forEach(horoscope => { %>
                        <div class="card">
                            <a href="/horoscope/<%= horoscope.sign.toLowerCase() %>">
                                <img src="/images/signs/<%= horoscope.image %>" alt="<%= horoscope.sign %> sign" class="card-image">
                                <h2 class="card-title"><%= horoscope.sign %></h2>
                                <p class="card-date-range"><%= horoscope.dateRange %></p>
                            </a>
                        </div>
                    <% }) %>
                </div>
            </section>
        </main>
        <footer style="margin-top: 50px;">
            <div class="social-media">
                <a href="#"><img src="/images/fb.png" alt="Facebook"></a>
                <a href="#"><img src="/images/ig.png" alt="Instagram"></a>
                <a href="#"><img src="/images/tt.png" alt="TikTok"></a>
            </div>
        </footer>
    </div>
</body>
</html>
